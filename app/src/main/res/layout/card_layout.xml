<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="1dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/card_thumbnail_pic"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/card_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purushu anugrahikanam"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/card_thumbnail_pic"
            android:layout_toEndOf="@id/card_thumbnail_pic" />

        <TextView
            android:id="@+id/card_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purushu"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_below="@id/card_title_text"
            android:layout_toRightOf="@id/card_thumbnail_pic"
            android:layout_toEndOf="@id/card_thumbnail_pic" />

    </RelativeLayout>
</android.support.v7.widget.CardView>